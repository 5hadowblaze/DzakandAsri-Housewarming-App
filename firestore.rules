rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to all documents for housewarming party
    // In a production app, you would want more restrictive rules
    match /rsvps/{document} {
      allow read, write: if true;
    }
    match /bookings/{document} {
      allow read, write: if true;
    }
  }
}